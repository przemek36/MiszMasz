@page
@model MiszMasz.Pages.Recipes.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Details</h1>

@if ((bool)ViewData["IsAuthorized"])
{
<div class="approve-forms">
    <form asp-page-handler="cookbook" method="post">
        <input type="hidden" name="recipeId" value="@Model.Recipe.Id"/>
        <span>Dodaj do książki kucharskiej: </span>
        <button type="submit">
                <img src="@((bool)ViewData["IsAdded"] ? "~/img/add_2.png": "~/img/add_1.png")" />
        </button>
    </form>
    <form asp-page-handler="likes" method="post">
        <input type="hidden" name="recipeId" value="@Model.Recipe.Id" />
        <span>Polubienie: </span>
        <button type="submit">
                <img src="@((bool)ViewData["IsLiked"] ? "~/img/like_2.png": "~/img/like_1.png")" />
        </button>
    </form>
</div>
}

<div>
    <h4>Recipe</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.Author)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.Author.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.Likes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.Likes)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Index">Back to List</a>
</div>

<div>
    @if ((bool)ViewData["IsAuthorized"])
    {
    <div>
        <form asp-page-handler="comment" method="post">
            <input type="hidden" name="recipeId" value="@Model.Recipe.Id" />
            <input type="text" name="comment" />
            <input type="submit" />
        </form>
    </div>
    }

    @foreach (var item in Model.Recipe.Comments)
    {
    <div style="bakckground-color:white"> 
        <div> @item.Author.Name </div>
        <div> @item.Text </div>
    </div>
    }
</div>
